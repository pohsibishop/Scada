version: "3.7"

services:
  db:
    image: mysql:5.7
    container_name: scada-mysql
    environment:
      MYSQL_ROOT_PASSWORD: rootpass
      MYSQL_DATABASE: scadalts
      MYSQL_USER: scadalts_user
      MYSQL_PASSWORD: StrongPassword123!
    ports:
      - "3306:3306"
    volumes:
      - db_data:/var/lib/mysql

  scadalts:
    image: scadalts/scadalts:latest
    container_name: scada-lts
    depends_on:
      - db
    environment:
      DB_HOST: db
      DB_PORT: 3306
      DB_NAME: scadalts
      DB_USER: scadalts_user
      DB_PASS: StrongPassword123!
    ports:
      - "8080:8080"

volumes:
  db_data:
